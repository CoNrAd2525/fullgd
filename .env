# Server Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000
CLIENT_URL=http://localhost:3001

# JWT Authentication
JWT_SECRET=development_jwt_secret_key
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
# Set which databases to use
USE_MONGODB=false
USE_POSTGRES=true
USE_REDIS=false

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/unified-ai-platform

# PostgreSQL with pgvector
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=unified_ai_platform
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/unified_ai_platform

# Redis
# REDIS_URI=redis://localhost:6379

# AI Model Providers
# OpenAI
OPENAI_API_KEY=sk-dummy-key

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_MULTI_AGENT=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_TOOL_INTEGRATION=true